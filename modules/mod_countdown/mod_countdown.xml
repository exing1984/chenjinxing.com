<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.0.0" method="upgrade" client="site">
	<name>Countdown</name>
	<creationDate>13 Aug 2015</creationDate>
	<author>Joomlavi.com</author>
	<authorEmail>dev@joomlavi.com</authorEmail>
	<authorUrl>http://www.joomlavi.com</authorUrl>
	<copyright>Copyright (C) 20015 Joomlavi. All rights reserved. </copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0.0</version>
	<description>Countdown</description>
	<files>
		<filename module="mod_countdown">mod_countdown.php</filename>
		<filename>index.html</filename>
		<filename>mod_countdown.xml</filename>
		<folder>assets</folder>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
            <fieldset name="basic">
            	<field
					name="countdowns_style"
					type="list"
					default="1"
					label="Countdown style" >
					<option value="1">Style 1</option>
					<option value="2">Style 2</option>
					<option value="3">Style 3</option>
					<option value="4">Style 4</option>
					<option value="5">Style 5</option>
					<option value="6">Style 6</option>
					<option value="7">Style 7</option>
					<option value="8">Style 8</option>
					<option value="9">Style 9</option>
				</field>
               	<field name="times" type="calendar" default="10-8-2015" label="Select a date" description="" format="%d-%m-%Y"  />			
				<field name="label_days" type="text" default="Days" label="Days label" description="" /> 
				<field name="label_hours" type="text" default="Hours" label="Hours label" description="" />
				<field name="label_minutes" type="text" default="Minutes" label="Minutes label" description="" /> 
				<field name="label_seconds" type="text" default="Seconds" label="Seconds label" description="" /> 
				<field name="expiry_text" type="text" default="Countdown is complete!" label="Expiry Text" description="" /> 
			</fieldset> 
			<fieldset name="offline" label="Offline page">		
				<field name="offline_background" type="media" default="" label="Offline background" description="" /> 
			</fieldset> 
            <fieldset name="advanced">
                <field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" /> 
            </fieldset>
        </fields>
	</config>
</extension>
